<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_mine_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_header_mine_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_mine_head_960_970"
            app:layout_constraintDimensionRatio="5:2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_avatar_mine_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_header_mine_fragment"
            app:layout_constraintLeft_toLeftOf="@+id/iv_header_mine_fragment"
            app:layout_constraintRight_toRightOf="@+id/iv_header_mine_fragment"
            app:layout_constraintTop_toTopOf="@+id/iv_header_mine_fragment"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_nickname_mine_frgament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="小明"
            app:layout_constraintBottom_toBottomOf="@+id/iv_header_mine_fragment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar_mine_fragment"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="TextView111"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/iv_header_mine_fragment" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="TextView222"
            app:layout_constraintLeft_toRightOf="@+id/textView"
            app:layout_constraintRight_toLeftOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/iv_header_mine_fragment" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="TextView333"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            app:layout_constraintRight_toLeftOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/iv_header_mine_fragment" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="textView444"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_header_mine_fragment" />

        <View
            android:id="@+id/division0"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:background="@color/base_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/iv_icon_settings_mine_fragment"
            android:layout_width="30dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_title_settings_mine_fragment"
            app:layout_constraintTop_toBottomOf="@+id/division0"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title_settings_mine_fragment"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center|start"
            android:text="设置"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon_settings_mine_fragment"
            app:layout_constraintRight_toRightOf="@+id/tv_describe_settings_mine_fragment"
            app:layout_constraintTop_toBottomOf="@+id/division0" />

        <TextView
            android:id="@+id/tv_describe_settings_mine_fragment"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center|end"
            android:text="这是用来设置的"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/tv_title_settings_mine_fragment"
            app:layout_constraintRight_toLeftOf="@+id/iv_arrow_settings_mine_fragment"
            app:layout_constraintTop_toBottomOf="@+id/division0" />

        <ImageView
            android:id="@+id/iv_arrow_settings_mine_fragment"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_describe_settings_mine_fragment"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/division0"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <View
            android:id="@+id/line0"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/base_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_arrow_settings_mine_fragment" />

        <ImageView
            android:id="@+id/iv_icon_about_mine_fragment"
            android:layout_width="30dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_title_about_mine_fragment"
            app:layout_constraintTop_toBottomOf="@+id/line0"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title_about_mine_fragment"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center|start"
            android:text="关于"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon_about_mine_fragment"
            app:layout_constraintRight_toRightOf="@+id/tv_describe_about_mine_fragment"
            app:layout_constraintTop_toBottomOf="@+id/line0" />

        <TextView
            android:id="@+id/tv_describe_about_mine_fragment"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center|end"
            android:text="这是用来设置的"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/tv_title_about_mine_fragment"
            app:layout_constraintRight_toLeftOf="@+id/iv_arrow_about_mine_fragment"
            app:layout_constraintTop_toBottomOf="@+id/line0" />

        <ImageView
            android:id="@+id/iv_arrow_about_mine_fragment"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_describe_about_mine_fragment"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line0"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <View
            android:id="@+id/division1"
            android:layout_width="0dp"
            android:layout_height="800dp"
            android:background="@color/base_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_icon_about_mine_fragment" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>